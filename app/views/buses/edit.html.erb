<% if logged_in? %>
  <div class="row">
    <div class="col-sm-6">
      <h2 class="text-start text-sm-center">バス便名変更</h2>
    </div>
    <div class="col-sm-6">
      <h3 class="text-start text-sm-center">現在時刻 <%= @simtime %></h3>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-6 offset-sm-3">
      <%= form_with(model: @bus) do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>

        <div class="mb-3">
          <%= f.label :name, 'バス便名' %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>

        <%= f.submit '変更', class: 'btn btn-primary w-100' %>
      <% end %>
    </div>
  </div>
<% end %>