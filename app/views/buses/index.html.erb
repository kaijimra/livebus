<% if logged_in? %>
  <div class="row">
    バス一覧
    <%= link_to '追加', new_bus_path, class: 'nav-link' %>
    <div class="col-sm-8">
      <%= render 'buses/buses', buses: @buses %>
    </div>
    <% lastbus = Bus.order(updated_at: :asc).last %>
    <% if lastbus %>
      <%= link_to "末尾のバス便を削除", bus_path(lastbus), method: :delete, data: { confirm: "削除しますか？" }, class: 'btn btn-danger btn-sm' %>
    <% end %>
  </div>
<% end %>