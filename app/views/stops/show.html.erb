<% if logged_in? %>
  <div class="row">
    <div class="col-sm-6">
      <h2 class="text-start text-sm-center">
        <%= @stop.name %>バス停時刻表</h2>
    </div>
    <div class="col-sm-6">
      <h3 class="text-start text-sm-center">現在時刻 <%= @simtime %></h3>
    </div>
  </div>

  <div class="row">
    <div class="mx-auto col-md-8">
      <div class="row">
        <div class="col-md-9">
          <%= link_to 'バス停名変更', edit_stop_path(@stop), class: 'btn btn-primary btn-sm' %>
        </div>
      </div>
      <div class="row">
        <div class="col-3">
          <% if Stop.exists?(@stop.id - 1) %>
            <%= link_to '◀前バス停', stop_path(@stop.id - 1), class: 'btn btn-secondary w-100 btn-sm' %>
          <% end %>
        </div>
        <div class="offset-6 col-3">
          <% if Stop.exists?(@stop.id + 1) %>
            <%= link_to '次バス停▶', stop_path(@stop.id + 1), class: 'btn btn-secondary w-100 btn-sm' %>
          <% end %>
        </div>
      </div>
      <%= render 'stops/timetable', stop: @stop %>
    </div>
  </div>
<% end %>